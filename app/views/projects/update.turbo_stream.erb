<%= turbo_stream.replace "project_title_sidebar_#{@project.id}" do %>
  <li class="nav-item project-nav-item active" id="project_title_sidebar_<%= @project.id %>">
    <%= link_to @project.title, project_path(@project), class: "nav-link" %>
    <%= button_to project_path(@project), 
        method: :delete, 
        form: { data: { turbo_confirm: "Are you sure you want to delete this project?" } },
        class: "project-delete-btn",
        title: "Delete Project" do %>
      <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="3 6 5 6 21 6"></polyline><path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"></path></svg>
    <% end %>
  </li>
<% end %>

<%= turbo_stream.replace dom_id(@project, :header) do %>
  <h2 class="project-title" id="<%= dom_id(@project, :header) %>" data-project-title-target="text" data-action="click->project-title#edit">
    <%= @project.title %>
  </h2>
<% end %>

<%= turbo_stream.replace "project_video_controls" do %>
  <%= render "projects/video_controls", project: @project %>
<% end %>
